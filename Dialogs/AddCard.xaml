<Window x:Class="OpenCardMaker.Dialogs.AddCard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenCardMaker.Dialogs"
        mc:Ignorable="d"
        Title="AddCard" Height="152" Width="180" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="20,15,0,0" Text="Enter Card ID:" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox Name="CardIDEntry" Margin="20,10,20,10" Grid.Row="1" Text="" TextWrapping="Wrap"/>
        <Button Click="btnOKClick" Content="OK" Margin="20,10,0,0" Grid.Row="2" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Width="60"/>
        <Button Click="btnCancelClick" Content="Cancel" Margin="0,10,20,0" Grid.Row="2" Height="20" VerticalAlignment="Top" HorizontalAlignment="Right" Width="60"/>
    </Grid>
</Window>
