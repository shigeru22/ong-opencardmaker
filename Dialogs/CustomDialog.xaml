<Window x:Class="OpenCardMaker.Dialogs.CustomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenCardMaker.Dialogs"
        mc:Ignorable="d"
        Title="Dialog Title" Height="100" Width="300" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Click="btnOKClick" Content="OK" HorizontalAlignment="Right" Grid.Row="1" Width="60" Margin="0,5,15,12" Padding="1,1,1,1"/>
        <TextBlock Name="DialogText" Text="Dialog texts here" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="20,15,20,15"/>
    </Grid>
</Window>
