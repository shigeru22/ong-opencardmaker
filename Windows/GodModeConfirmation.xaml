<Window x:Class="OpenCardMaker.Windows.GodModeConfirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenCardMaker.Windows"
        mc:Ignorable="d"
        Title="God Mode Confirmation" Height="170" Width="250" ResizeMode="NoResize" Loaded="onLoad" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Name="MainText" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Height="47" Width="200">
            Chosen hero of the Master Sword...
            <LineBreak/>
            Overcome the Trial of the Sword and claim the blade's true splendor!
        </TextBlock>
        <Button Content="Cancel" Click="btnCancel" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="1" VerticalAlignment="Top" Height="20" Width="60"/>
    </Grid>
</Window>
